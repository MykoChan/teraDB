doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    meta(name="author", content="Myune")
    title TeraDB - Items

    link(rel="stylesheet", href="public/css/bootstrap.min.css")
    link(rel="stylesheet", href="public/css/starter-template.css")
    link(rel="stylesheet", href="public/css/simple-sidebar.css")
    link(rel="stylesheet", href="public/css/fuelux.css")
    link(rel="stylesheet", href="public/css/fuelux-responsive.css")
  body
    .navbar.navbar-inverse.navbar-fixed-top(role="navigation")
      .container
        .navbar-header
          button.navbar-toggle(type="button", data-toggle="collapse", data-target=".navbar-collapse")
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
        .collapse.navbar-collapse
          ul.nav.navbar-nav
            li
              a(href="/") TeraDB
            li.active
              a(href="/items") Items
            li
              a(href="/about") About
            li
              a(href="/contact") Contact
        
    .container
      #wrapper
          #sidebar-wrapper
            ul.sidebar-nav
              li.sidebar-brand
                h1 Item filters
              li
                a(href='#') Weapon
              li
                a(href='#') Armor
              li
                a(href='#') Accessory
    
    .container-fluid
      table#MyGrid.table.table-bordered.datagrid
        thead
          tr
            th
              span.datagrid-header-title SO-16440292
              .datagrid-header-left
              .datagrid-header-right
                .input-append.search
                  input.input-medium(type='text', placeholder='Search')
                  button.btn
                    i.icon-search
        tfoot
          tr
            th
              .datagrid-footer-left(style='display: none;')
                .grid-controls
                  span
                    span.grid-start
                    | -
                    span.grid-end
                    | of
                    span.grid-count
                  select.grid-pagesize
                    option 5
                    option 10
                  span Per Page
              .datagrid-footer-right(style='display: none;')
                .grid-pager
                  button.btn.grid-prevpage
                    i.icon-chevron-left
                  span Page
                  .input-append.dropdown.combobox
                    input.span1(type='text')
                  span
                    | of
                    span.grid-pages
                  button.btn.grid-nextpage
                    i.icon-chevron-right


    script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js")
    script(src="../../dist/js/bootstrap.min.js")
    script(src="http://fuelcdn.com/fuelux/2.3/loader.min.js")
    script(src="http://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.4.4/underscore-min.js")
    script(src="public/js/datagrid.js")


